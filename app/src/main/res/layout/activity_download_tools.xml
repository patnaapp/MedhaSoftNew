<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/tvSUbHeader"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="9pt"
                android:text="DOWNLOAD AND SETUP"/>

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/lnBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnDownloadHindiKP"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:background="@drawable/gradentsubheader"
                    android:text="HINDI TYPING TOOL"
                    android:onClick="onCLick_DownloadHindiKeyBoard"
                    android:drawableLeft="@drawable/keyboard"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textSize="7pt"
                    android:textColor="#fff" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/btnPDFReader"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:background="@drawable/gradentsubheader"
                    android:text="PDF READER"
                    android:onClick="onCLick_DownloadPDFReader"
                    android:drawableLeft="@drawable/pdfimg"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textSize="7pt"
                    android:textColor="#fff" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnSetUpHindiKP"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:background="@drawable/gradentsubheader"
                    android:text="SETUP HINDI TOOL"
                    android:onClick="onCLick_ShowSetUP"
                    android:drawableLeft="@drawable/toolss"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textSize="7pt"
                    android:textColor="#FFF" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>