<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/header"
            layout="@layout/header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>


        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/myprofile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#EB13948D"
            android:elevation="1dp"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu"
                />

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/et_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Desiganation"
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_Nname1"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Name :" />

                    <TextView
                        android:id="@+id/tv_Nname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="true"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="1dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_desi"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Desiganation :" />

                    <TextView
                        android:id="@+id/tv_Ndesi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:textAllCaps="true"
                        android:padding="5dp"
                        android:text=" "
                        android:textColor="#000"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_mobile1"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Mobile :" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_pin1"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="PIN :" />

                    <TextView
                        android:id="@+id/tv_pin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text=" " />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_Nname12"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Blood Group :" />

                    <TextView
                        android:id="@+id/tv_bloodgrp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">



                    <TextView
                        android:id="@+id/gen"
                        android:layout_width="120dp"
                        android:layout_height="50dp"

                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Gender :" />

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textAllCaps="true"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"


                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">



                    <TextView
                        android:id="@+id/add"
                        android:layout_width="120dp"
                        android:layout_height="50dp"

                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="Address :" />

                    <TextView
                        android:id="@+id/tv_addressr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="#fff"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"


                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:weightSum="2">



                    <TextView
                        android:id="@+id/ret"
                        android:layout_width="120dp"
                        android:layout_height="50dp"

                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="DOR :" />


                    <TextView
                        android:id="@+id/tv_reitre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>