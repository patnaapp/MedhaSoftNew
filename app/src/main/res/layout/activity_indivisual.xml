<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="bih.nic.medhasoft.EmployListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0c11ba"
        android:text="LIST OF EMPLOYEE"
        android:padding="5dp"
        android:gravity="center"
        android:background="#00A6FF"
        android:textStyle="bold" />
    <LinearLayout
        android:background="@drawable/lin_background"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textColor="#0c11ba"
            android:text="NAME"
            android:gravity="center"
            android:lines="2"

            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:lines="2"
            android:text="Attendence"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="#0c11ba"
            android:lines="2"
            android:text="DESIGNATION"
            android:textStyle="bold" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="#0c11ba"
            android:lines="2"
            android:text="PIN"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_Norecord"
        android:layout_width="399dp"

        android:layout_height="fill_parent"
        android:background="@android:color/background_light"
        android:gravity="center_vertical|center_horizontal"
        android:text="No Record Found"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF4B4B"
        android:textStyle="normal"
        android:visibility="visible" />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listEmpList"
        android:layout_width="match_parent"
        android:layout_height="550dp">

    </ListView>


</LinearLayout>